<div class="centered col-lg-4 col-md-6 col-sm-8 col-xs-12">
    <form data-ng-submit="login()" class="form-horizontal" role="form">
        <div class="avatar"></div>
        <div class="form-group">
            <input data-ng-model="username" class="form-control" type="email" name="username" id="input-username" placeholder="email address" />
        </div>
        <div class="form-group">
            <input data-ng-model="password" class="form-control" type="password" name="password" id="input-password" placeholder="password"/>
        </div>
        <div class="form-group">
            <button class="btn btn-default btn-primary btn-lg btn-block" type="submit">Sign in</button>
            <span class="pull-right"><a href="#">forgot password</a></span>
        </div>
        <div class="form-group">
            <span>new to Anbu ?</span>
            <a class="btn btn-default btn-success btn-lg btn-block" href="/signup">Sign up</a>
        </div>
    </form>
</div>